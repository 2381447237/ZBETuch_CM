<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="筛选"
        android:textSize="22sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9C6C9"
        />

    <RadioGroup
        android:id="@+id/rg_complete"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/rb_no_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未查"
            android:gravity="center"
            android:textSize="24sp"
            android:button="@null"
            android:background="@drawable/shape_radio_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="20dp"
            android:textColor="@drawable/selector_textcolor"/>

        <RadioButton
            android:id="@+id/rb_is_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已查"
            android:gravity="center"
            android:textSize="24sp"
            android:button="@null"
            android:background="@drawable/shape_radio_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="20dp"
            android:textColor="@drawable/selector_textcolor"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_applyLand"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/rb_is_applyLand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已申请补贴"
            android:button="@null"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/shape_radio_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="20dp"
            android:textColor="@drawable/selector_textcolor"/>

        <RadioButton
            android:id="@+id/rb_no_applyLand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未申请补贴"
            android:button="@null"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/shape_radio_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="20dp"
            android:textColor="@drawable/selector_textcolor"/>

    </RadioGroup>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:padding="20dp"
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="22sp"
            android:background="#ffffff"
            android:textColor="#000000"/>
        <Button
            android:padding="20dp"
            android:id="@+id/sure_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="22sp"
            android:background="#ff0000"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>